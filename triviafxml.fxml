<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="mypackage.TriviaGameFX" prefWidth="600" prefHeight="400">
    <VBox spacing="20" alignment="CENTER" layoutX="50" layoutY="50" prefWidth="500" prefHeight="300">
        <!-- Game Title -->
        <Label text="Trivia Game" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2a9df4;" />

        <!-- Question Label -->
        <Label fx:id="questionLabel" wrapText="true" style="-fx-font-size: 18px; -fx-font-weight: bold;" prefWidth="450" />

        <!-- Answer Options -->
        <VBox fx:id="answerBox" spacing="10" alignment="CENTER" />

        <!-- Next Button -->
        <Button fx:id="nextButton" text="Next" onAction="#onNextButtonClicked" style="-fx-font-size: 16px; -fx-background-color: #2a9df4; -fx-text-fill: white; -fx-padding: 10 20;" />

        <!-- Result Label -->
        <Label fx:id="resultLabel" style="-fx-font-size: 16px; -fx-text-fill: #4caf50;" />
    </VBox>
</AnchorPane>
